<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TalkOwlActivity">

    <ImageView
        android:id="@+id/speakowl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/text_value_speech"
        android:layout_centerHorizontal="true"
        android:src="@drawable/owl_open_mouth" />
    <!--<ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/text_value_speech"
        android:src="@drawable/owl_open_mouth"
        />-->
    <EditText
        android:id="@+id/text_value_speech"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:layout_centerInParent="true"
        android:hint="@string/enter_your_values_here"
        android:textAlignment="center"
        >
        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/buttonspeak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_value_speech"
        android:layout_centerInParent="true"
        android:background="@color/black"
        android:textColor="@color/white"
        android:shadowColor="@color/yellow_golden"
        android:text="@string/speak" />

</RelativeLayout>